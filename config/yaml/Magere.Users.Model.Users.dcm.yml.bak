Popov\User\Model\User:
  type: entity
  table: users
  repositoryClass: Popov\User\Model\Repository\UserRepository
  fields:
    id:
      id: true
      type: integer
      generator:
        strategy: AUTO
      options:
        unsigned: true
    departmentId:
      type: integer
      options:
        unsigned: true
      nullable: true
    supplierId:
      type: integer
      options:
        unsigned: true
        default: 0
        comment: Поставщик
    email:
     type: string
     length: 100
    password:
      type: string
      length: 32
    firstName:
      type: string
      length: 30
    lastName:
      type: string
      length: 30
    patronymic:
      type: string
      length: 50
    phone:
      type: string
      length: 20
    phoneWork:
      type: string
      length: 20
    phoneInternal:
      type: string
      length: 20
    post:
      type: string
      length: 100
    dateBirth:
      type: date
      nullable: true
      options:
        comment: День рождения
    dateEmployment:
      type: date
      nullable: true
      options:
        comment: Дата принятия на работу
    photo:
      type: string
      length: 255
    notation:
      type: text
      nullable: true
    showIndex:
      type: string
      length: 255
      nullable: false
      options:
        default: city
        comment: Доступні значення city, supplier
    sendEmails:
      type: integer
    remove:
      type: integer
  oneToMany:
    #usersCity:
    #  targetEntity: Popov\User\Model\UsersCity
    #  mappedBy: users
    #usersRoles:
    #  targetEntity: Popov\User\Model\UsersRoles
    #  mappedBy: users
    orderSale:
      targetEntity: Popov\OrderSale\Model\OrderSale
      mappedBy: permitIssuanceUser
    orderSalePaid:
      targetEntity: Popov\OrderSale\Model\OrderSalePaid
      mappedBy: creator
    callCenter:
      targetEntity: Popov\CallCenter\Model\CallCenter
      mappedBy: users
    cart:
      targetEntity: Popov\Cart\Model\Cart
      mappedBy: users
    files:
      targetEntity: Popov\Files\Model\Files
      mappedBy: creator
  manyToMany:
    cities: # unidirectional @link http://goo.gl/xqnlAl
      targetEntity: Popov\City\Model\City
      joinTable:
        name: users_cities
        joinColumns:
          userId:
            referencedColumnName: id
        inverseJoinColumns:
          cityId:
            referencedColumnName: id
    roles: # bidirectional @link http://goo.gl/83P2JC
      targetEntity: Popov\Role\Model\Role
      inversedBy: users
      joinTable:
        name: users_roles
        joinColumns:
          userId:
            referencedColumnName: id
        inverseJoinColumns:
          roleId:
            referencedColumnName: id